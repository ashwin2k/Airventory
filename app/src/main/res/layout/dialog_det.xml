<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/dialog_g"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <ScrollView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
    <RelativeLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="140dp"
            android:id="@+id/pixc"
            >
            <de.hdodenhof.circleimageview.CircleImageView
                android:id="@+id/profile_image2"
                android:layout_marginLeft="30dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="35dp"
                android:layout_width="70dp"
                android:src="@drawable/pro_2"
                />
            <TextView
                android:id="@+id/textViewx"
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_height="wrap_content"
                android:text="S/N"
                android:layout_marginTop="15dp"

                android:layout_toRightOf="@id/profile_image2"
                android:textColor="#525050"


                android:textSize="22dp"
                android:textAlignment="viewStart"
                android:textStyle="bold"
                />
            <Button
                android:id="@+id/report"
                android:layout_width="wrap_content"
                android:layout_marginRight="20dp"
                app:cornerRadius="20dp"
                android:text="Report"
                android:backgroundTint="#1976DB"

                android:layout_centerHorizontal="true"
                android:layout_marginTop="90dp"
                android:elevation="10dp"
                android:layout_height="40dp"/>
        </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginBottom="30dp"
        android:layout_below="@id/pixc"
        android:layout_marginHorizontal="25dp"
        android:layout_height="80dp">
        <TextView
            android:id="@+id/textView"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="S/N"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/sno"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#8F8F8F"
            android:layout_marginTop="30dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="190dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/textView1"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Type"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/type"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="----"
            android:textColor="#8F8F8F"
            android:layout_marginTop="80dp"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="260dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/textView2"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Origin"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/origin"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#8F8F8F"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="320dp"
        android:layout_height="170dp">
        <TextView
            android:id="@+id/textView3"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Information"
            android:textColor="#525050"
            android:textSize="15dp"
            android:visibility="gone"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/info"
            android:layout_width="wrap_content"
            android:layout_marginTop="105dp"
            android:visibility="gone"

            android:layout_height="wrap_content"
            android:text="Lorem ipsum dolor sit amet, consectetur adipiscing elit. Aliquam dictum mauris est. Cras molestie ligula tempor sapi."
            android:textColor="#8F8F8F"
            android:scrollbars="vertical"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="380dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/textView5"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Last scanned at"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/scan"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#8F8F8F"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="470dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/textView9"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Mfg date"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/mfgd"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#8F8F8F"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginHorizontal="25dp"
        android:layout_marginTop="570dp"
        android:layout_height="130dp">
        <TextView
            android:id="@+id/textView0"
            android:layout_width="wrap_content"
            android:layout_centerVertical="true"
            android:layout_height="wrap_content"
            android:text="Service due at"
            android:textColor="#525050"
            android:textSize="15dp"
            android:textAlignment="viewStart"
            android:textStyle="bold"
            />
        <TextView
            android:id="@+id/servicedue"
            android:layout_width="wrap_content"
            android:layout_marginTop="80dp"
            android:layout_height="wrap_content"
            android:text="---"
            android:textColor="#8F8F8F"
            android:textSize="15dp"
            android:layout_alignParentRight="true"
            android:textAlignment="viewEnd"
            android:textStyle="bold"
            />
    </RelativeLayout>

    </RelativeLayout>

    </ScrollView>

</RelativeLayout>